---
import { Picture } from 'astro:assets'
import winterVillage from '@/assets/images/bg.png'

import Meteors from '@/components/ui/meteors'
---

<script>
    import { gsap } from 'gsap'

    const enterAnim = gsap.timeline({ delay: 1 })
    enterAnim
        .fromTo(
            '#hero-title',
            {
                opacity: 0,
            },
            {
                duration: 1,
                opacity: 1,
                ease: 'power2.out',
            }
        )
        .fromTo(
            '#hero-subtitle',
            {
                opacity: 0,
            },
            { duration: 1, opacity: 1, ease: 'power2.out' },
            '-=0.5'
        )
</script>

<div class="relative overflow-hidden">
    <Picture
        src={winterVillage}
        alt=""
        aria-hidden
        formats={['avif', 'webp']}
        class="h-screen w-full object-cover object-bottom"
        height={720}
        width={1280}
    />
    <div
        class="absolute inset-0 flex flex-col items-center justify-center bg-black/25"
    >
        <h1 id="hero-title" class="text-center text-8xl font-bold text-white">
            Hello World!
        </h1>
        <div id="hero-subtitle" class="text-center text-2xl text-white">
            I'm a marketing undergraduate student aspiring to be a developer
        </div>
    </div>
    <Meteors client:only="react" number={10} />
</div>

<style>
    #hero-title,
    #hero-subtitle {
        font-family: 'Mountains of Christmas', system-ui;
    }
</style>
