---
import { Picture } from 'astro:assets'
import winterVillage from '@/assets/images/bg.webp'

import Meteors from '@/components/ui/meteors.svelte'
---

<script>
    import { gsap } from 'gsap'

    const enterAnim = gsap.timeline({ delay: 2 })
    enterAnim
        .fromTo('#overlay', { opacity: 1 }, { opacity: 0, duration: 0.5 })
        .fromTo(
            '#hero-title',
            {
                opacity: 0,
            },
            {
                duration: 1,
                opacity: 1,
                delay: 1,
                ease: 'power2.out',
            }
        )
        .fromTo(
            '#hero-subtitle',
            {
                opacity: 0,
            },
            { duration: 1, opacity: 1, ease: 'power2.out' },
            '-=0.5'
        )
</script>

<section class="relative snap-start overflow-hidden">
    <Picture
        src={winterVillage}
        alt=""
        aria-hidden
        formats={['avif', 'webp']}
        class="h-screen w-full object-cover object-bottom"
        height={720}
        width={1280}
    />
    <div class="absolute inset-0 flex justify-center bg-black/25">
        <div
            class="flex max-w-screen-xl flex-col items-center justify-center p-8"
        >
            <h1
                id="hero-title"
                class="text-center text-8xl font-bold text-white"
            >
                Hi! I'm LinCie
            </h1>
            <div
                id="hero-subtitle"
                class="max-w-screen-md text-center text-2xl text-white"
            >
                A marketing student, self-taught web developer, and a passionate
                language learner from Indonesia
            </div>
        </div>
    </div>
    <Meteors client:idle number={15} />
    <div id="overlay" class="absolute inset-0 bg-black"></div>
</section>

<style>
    #hero-title,
    #hero-subtitle {
        font-family: 'Mountains of Christmas', system-ui;
    }
</style>
